{
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true
  },
  "plugins": [ "html", "json" ],
  "extends": "elemefe",
  "rules": {
    "no-restricted-globals": [ "error", "event", "fdescribe" ],
    "brace-style": [ "error", "stroustrup", { "allowSingleLine": true } ],
    "indent": "off",
    "operator-linebreak": "off"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  }
}
